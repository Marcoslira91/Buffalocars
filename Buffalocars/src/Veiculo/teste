
	public static void  Cadastrar_veiculo()  {
		Automovel auto[]=new Automovel[15];
	 Scanner input= new Scanner(System.in);
		for(int i =0; i<auto.length;i++) {
		System.out.println("Digite as seguintes a tribuições em ordem para cadastrar um veículo.\nAo término de digitar cada pressione enter.");
		System.out.println("Placa\nCor\n\nNumero de portas\nTipo de combustivel\nValor de localção\nTipo de carro\nQuantas pessoas\nTipo do motor\nNome do modelo");
		

		auto[i].setPlaca(input.nextLine());
		auto[i].setCor(input.nextLine());
		auto[i].setTipoCombu(input.nextLine());
		auto[i].setTipoAutomovel(input.nextLine());
		auto[i].setNumPorta(input.nextInt());
		auto[i].setValorLocacao(input.nextDouble());
		auto[i].setNome(input.nextLine());
		auto[i].setDescricao(input.nextLine());
		auto[i].setCapacidade(input.nextInt());
		auto[i].setCategoria(input.nextLine());
		auto[i].setMotor(input.nextDouble());
		
		System.out.println("Deseja parar? Pressione s.");
		
	    char d=input.next().charAt(0);
		
		if(d=='s') {
			break;
			
		}
	}
		System.out.println("Aqui segue a lista de carros");
		
		for(int k=0;k<auto.length;k++) {
			
			System.out.println(auto[k]);
}
}
